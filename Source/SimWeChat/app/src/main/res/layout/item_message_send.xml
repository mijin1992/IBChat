<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:background="@color/chatBackground"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="10dp"
            android:text="10:23 AM"
            android:textSize="10sp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:minHeight="50dp"
            android:minWidth="100dp"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:orientation="horizontal"
            android:elevation="2dp"
            android:background="@drawable/shape_message_send">
            <TextView
                android:id="@+id/txt_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:maxWidth="150dp"
                android:text="Send Message"
                android:textColor="@color/textViewColor"
                android:textSize="14sp"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/ic_audio"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_voice_message_send"
                android:layout_toRightOf="@+id/txt_message"
                android:layout_toEndOf="@+id/txt_message" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/image_friend"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"/>
    </LinearLayout>
</RelativeLayout>