            <item name="android:layout_alignParentBottom">true</item>
            <item name="android:layout_centerHorizontal">true</item>
            <item name="android:src">@drawable/qb_logo</item>
        </style>-->

    <style name="HorizontalDividerStyle" parent="MatchWidth">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <style name="MessageContainerStyle" parent="MatchWidth">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/padding_common</item>
    </style>

    <style name="MessageContentContainerStyle" parent="WrapContent">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MessageTextStyle" parent="WrapContent">
        <item name="android:layout_marginLeft">@dimen/chat_message_content_margin</item>
        <item name="android:layout_marginRight">@dimen/chat_message_content_margin</item>
        <item name="android:maxWidth">250dp</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/chat_message_body_text_size</item>
    </style>

    <style name="MessageInfoStyle" parent="WrapContent">
        <item name="android:paddingLeft">@dimen/padding_common</item>
        <item name="android:paddingRight">@dimen/padding_common</item>
        <item name="android:textColor">@color/text_color_dark_grey</item>
        <item name="android:textSize">@dimen/chat_message_info_text_size</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="MessageAuthorStyle" parent="WrapContent">
        <item name="android:layout_marginLeft">@dimen/chat_message_username_margin</item>
        <item name="android:layout_marginRight">@dimen/chat_message_username_margin</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/text_color_dark_grey</item>
        <item name="android:textSize">@dimen/chat_author_text_size</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="typeface">roboto_bold</item>-->
    </style>

    <style name="ListDateHeaderStyle" parent="MatchWidth">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_color_dark_grey</item>
        <!--<item name="typeface">roboto_medium</item>-->
    </style>

    <style name="SeekBarPreferenceTitle" parent="WrapContent">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="CallerAvatar">
        <item name="android:layout_width">@dimen/call_avatar_diameter</item>
        <item name="android:layout_height">@dimen/call_avatar_diameter</item>
        <item name="android:padding">24dp</item>
        <item name="android:src">@drawable/ic_person_big</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="RoundedImageButton">
        <item name="android:layout_width">@dimen/call_buttons_diameter</item>
        <item name="android:layout_height">@dimen/call_buttons_diameter</item>
        <item name="android:padding">@dimen/call_buttons_padding</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="EndCallImageButton" parent="RoundedImageButton">
        <item name="android:background">@drawable/selector_call_end</item>
        <item name="android:src">@drawable/ic_phone_hangup</item>
    </style>

    <style name="TakeCallImageButton" parent="RoundedImageButton">
        <item name="android:background">@drawable/selector_call_take</item>
    </style>

    <style name="ToolbarStyleCall" parent="Widget.AppCompat.Toolbar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>


</resources>
